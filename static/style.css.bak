body {
  background: #f9f9f9;
  font-family: "Helvetica Neue", "Segoe UI", Helvetica, sans-serif;
  font-size: 18px;
  line-height: 26px;
  margin: 0;
  color: #111;
}

* {
  box-sizing: border-box;
}

img {
  max-width: 100%;
}

a {
  color: #7f2aff;
}
a:hover {
  color: #111;
}
input,
select,
button,
.button {
  padding: 15px;
  font-family: "Helvetica Neue", "Segoe UI", Helvetica, sans-serif;
  font-size: 1em;
  color: #111;
  border-radius: 5px;
  border: 1px solid #ccc;
}
input:focus,
select:focus {
  border-color: #999;
}

button,
button {
  background: #111;
  border-color: #111;
  color: #fff;
  width: auto;
  cursor: pointer;
}
button:hover,
.button:hover {
  border-color: #444;
  background: #444;
}

/* Custom */
.wrap {
  background-color: #fff;
  padding: 30px;
  max-width: 750px;
  min-width: 450px;
  margin: 30px auto;
  border-radius: 3px;
  box-shadow: inset 0 0 6px #fefefe, 2px 2px 0 #eee;
  border: 1px solid #ddd;
}

.header {
  text-align: center;
}

.taglines {
  color: #444;
}

.search {
  position: relative;
}
.search input {
  width: 100%;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
}
.search button {
  position: absolute;
  right: 0;
  top: 0;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
}

.footer {
  text-align: center;
  font-size: 0.75em;
  color: #888;
}
.footer .credit img {
  height: 11px;
  width: auto;
}
.footer .credit:hover img {
  opacity: 0.6;
}
.footer a {
  color: #888;
}

.center {
  text-align: center;
}

/* Homepage */
.home .wrap {
  max-height: 475px;
}
.home .container {
  margin-top: calc(50vh - (475px / 2));
}
.home .logo {
  margin-bottom: 45px;
}
.home .search {
  margin: 45px 0 15px 0;
}

/* Non-homepage */
.search {
  
}

@media screen and (max-width: 775px) {
  .home .wrap,
  .wrap {
    margin: 0;
    padding: 30px;
    width: 100%;
    max-width: 100%;
  }
}
